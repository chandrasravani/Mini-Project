<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_abdominal_pain"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:orientation="vertical"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.sravani164.diseaseanalytics.AbdominalPain">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Abdominal Pain"
                android:textStyle="bold"
                android:textSize="50px"
                android:gravity="center" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Possible Diseases : "
                android:textStyle="bold"
                android:layout_marginTop="19dp"
                android:textSize="20dp"            />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/t1"
                android:text= "Stomach :"
                android:textStyle="bold"
                android:layout_marginTop="14dp"
                android:layout_marginLeft="10dp"
                android:gravity="center"
                android:textSize="19dp"   />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text= "Gastritis"
                android:layout_marginTop="4dp"
                android:layout_marginLeft="70dp"
                android:textSize="17dp"   />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text= "stomach ulcer"
                android:layout_marginTop="4dp"
                android:layout_marginLeft="70dp"
                android:textSize="17dp"   />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text= "stomach cancer"
                android:layout_marginTop="4dp"
                android:layout_marginLeft="70dp"
                android:textSize="17dp"   />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text= "Liver :"
                android:textStyle="bold"
                android:layout_marginTop="14dp"
                android:layout_marginLeft="10dp"
                android:gravity="center"
                android:textSize="19dp"   />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text= "Liver cancer"
                android:layout_marginTop="4dp"
                android:layout_marginLeft="70dp"
                android:textSize="17dp"   />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text= "Fatty liver hepatitis"
                android:layout_marginTop="4dp"
                android:layout_marginLeft="70dp"
                android:textSize="17dp"   />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text= "Kidney : "
                android:textStyle="bold"
                android:layout_marginTop="14dp"
                android:layout_marginLeft="10dp"
                android:gravity="center"
                android:textSize="19dp"   />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text= "kidney stones"
                android:layout_marginTop="4dp"
                android:layout_marginLeft="70dp"
                android:textSize="17dp"   />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text= "Kidney cancer"
                android:layout_marginTop="4dp"
                android:layout_marginLeft="70dp"
                android:textSize="17dp"   />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text= "Hydronephrosis"
                android:layout_marginTop="4dp"
                android:layout_marginLeft="70dp"
                android:textSize="17dp"   />

        </LinearLayout>
    </ScrollView>





</LinearLayout>
